        <ul class="recipe-list">
            <li><span class="recipe-name">Earl Grey:</span><br>Black Tea + Bergamot</li>
            <li><span class="recipe-name">Matcha Latte:</span><br>Matcha + Milk</li>
            <li><span class="recipe-name">London Fog:</span><br>Black Tea + Milk + Lavender</li>
            <li><span class="recipe-name">Green Detox:</span><br>Green Tea + Lemon + Ginger</li>
            <li><span class="recipe-name">Sweet Mint:</span><br>Green Tea + Mint + Honey</li>
            <li><span class="recipe-name">Chai Mix:</span><br>Black Tea + Milk + Cinnamon</li>
        </ul>
    </div>

    <script>
        let currentIngredients = [];
        const maxIngredients = 4;
        const potContentsDisplay = document.getElementById('pot-contents');
        const resultDisplay = document.getElementById('result-display');
        const steamEffect = document.getElementById('steam');

        // Recipe Database
        // Note: Ingredients in recipes must be sorted alphabetically for the comparison logic to work easily
        const recipes = [
            { name: "Classic Earl Grey", ingredients: ["Bergamot", "Black Tea"] },
            { name: "Creamy Matcha Latte", ingredients: ["Matcha", "Milk"] },
            { name: "London Fog", ingredients: ["Black Tea", "Lavender", "Milk"] },
            { name: "Green Detox", ingredients: ["Ginger", "Green Tea", "Lemon"] },
            { name: "Sweet Mint", ingredients: ["Green Tea", "Honey", "Mint"] },
            { name: "Spiced Chai Mix", ingredients: ["Black Tea", "Cinnamon", "Milk"] },
            { name: "Lemon Honey Tea", ingredients: ["Black Tea", "Honey", "Lemon"] },
            { name: "Pure Green", ingredients: ["Green Tea"] },
            { name: "Pure Black", ingredients: ["Black Tea"] }
        ];

        function addIngredient(item) {
            // Clear previous results
            resultDisplay.textContent = "";
            resultDisplay.style.color = "#5c5c5c";
            steamEffect.classList.remove('steaming');

            if (currentIngredients.length >= maxIngredients) {
                resultDisplay.textContent = "The pot is full!";
                resultDisplay.style.color = "#d98c8c";
                return;
            }

            currentIngredients.push(item);
            updatePotDisplay();
        }

        function updatePotDisplay() {
            if (currentIngredients.length === 0) {
                potContentsDisplay.innerHTML = '<span style="color:#ccc">Pot is empty...</span>';
            } else {
                potContentsDisplay.innerHTML = currentIngredients
                    .map(item => `<div class="tag">${item}</div>`)
                    .join(' + ');
            }
        }

        function clearPot() {
            currentIngredients = [];
            updatePotDisplay();
            resultDisplay.textContent = "";
            steamEffect.classList.remove('steaming');
        }

        function brewTea() {
            if (currentIngredients.length === 0) {
                resultDisplay.textContent = "You can't brew air! Add ingredients.";
                return;
            }

            // 1. Sort current ingredients to match recipe logic
            const sortedCurrent = [...currentIngredients].sort();
            
            // 2. Find a match
            let foundRecipe = null;

            for (let recipe of recipes) {
                // Check length first
                if (recipe.ingredients.length !== sortedCurrent.length) continue;

                // Sort recipe ingredients to ensure accurate comparison
                const sortedRecipeIng = [...recipe.ingredients].sort();

                // Compare arrays
                if (JSON.stringify(sortedCurrent) === JSON.stringify(sortedRecipeIng)) {
                    foundRecipe = recipe;
                    break;
                }
            }

            // 3. Visuals
            steamEffect.classList.add('steaming');
            
            // 4. Result
            if (foundRecipe) {
                resultDisplay.textContent = `‚ú® You brewed: ${foundRecipe.name}! ‚ú®`;
                resultDisplay.style.color = "#a4be7b"; // Success Green
            } else {
                resultDisplay.textContent = `You brewed a unique House Special Blend!`;
                resultDisplay.style.color = "#8d7b68"; // Brown
            }
        }
    </script>
